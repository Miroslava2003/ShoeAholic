@model ShoeAholic.Models.Order
@{
    ViewData["Title"] = "Поръчката е завършена";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-4">
                <div class="mb-3"><i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i></div>
                <h1 class="mb-3">Благодарим Ви за поръчката!</h1>
                <p class="lead text-muted">Вашата поръчка е приета успешно и скоро ще бъде обработена.</p>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white"><h5 class="mb-0"><i class="bi bi-receipt"></i> Детайли на поръчката</h5></div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6"><strong>Номер на поръчка:</strong><br /><span class="text-primary fs-4">#@Model.Id</span></div>
                        <div class="col-md-6 text-md-end"><strong>Дата:</strong><br />@Model.CreatedOn.ToString("dd.MM.yyyy HH:mm")</div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6><i class="bi bi-person"></i> Данни за контакт</h6>
                            <p class="mb-1">@Model.FullName</p>
                            <p class="mb-1">@Model.Email</p>
                            <p class="mb-0">@Model.Phone</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="bi bi-geo-alt"></i> Адрес за доставка</h6>
                            <p class="mb-1">@Model.City, @Model.PostalCode</p>
                            <p class="mb-0">@Model.Address</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Доставка:</strong>
                            @if (Model.DeliveryType == ShoeAholic.Models.Enums.DeliveryType.Address)
                            {
                                <span class="badge bg-info">До адрес</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Офис на куриер</span>
                            }
                        </div>
                        <div class="col-md-6">
                            <strong>Плащане:</strong>
                            @if (Model.PaymentType == ShoeAholic.Models.Enums.PaymentType.CashOnDelivery)
                            {
                                <span class="badge bg-warning">Наложен платеж</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Карта @(Model.IsPaid ? "✓ Платено" : "")</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header"><h5 class="mb-0"><i class="bi bi-box-seam"></i> Поръчани артикули</h5></div>
                <div class="card-body">
                    @foreach (var item in Model.Items)
                    {
                        var imageUrl = item.Shoe?.Images?.FirstOrDefault()?.ImageUrl ?? "/images/no-image.jpg";
                        var subtotal = item.Price * item.Quantity;
                        <div class="row mb-3 pb-3 border-bottom align-items-center">
                            <div class="col-md-2"><img src="@imageUrl" class="img-fluid rounded" alt="@item.Shoe?.Model" /></div>
                            <div class="col-md-6"><h6 class="mb-1">@item.Shoe?.Brand @item.Shoe?.Model</h6><small class="text-muted">Размер: @item.Size</small></div>
                            <div class="col-md-2 text-center"><small class="text-muted">Количество</small><br /><strong>@item.Quantity бр.</strong></div>
                            <div class="col-md-2 text-end"><strong>@subtotal.ToString("F2") лв.</strong></div>
                        </div>
                    }
                    <div class="d-flex justify-content-between mb-2"><span>Междинна сума:</span><span>@Model.SubTotal.ToString("F2") лв.</span></div>
                    <div class="d-flex justify-content-between mb-2"><span>Доставка:</span><span>@(Model.DeliveryPrice == 0 ? "<span class=\"text-success\">Безплатна</span>" : Model.DeliveryPrice.ToString("F2") + " лв.")</span></div>
                    <hr />
                    <div class="d-flex justify-content-between"><h5>Общо:</h5><h5 class="text-primary">@Model.TotalPrice.ToString("F2") лв.</h5></div>
                </div>
            </div>

            <div class="alert alert-info">
                <h6><i class="bi bi-info-circle"></i> Какво следва?</h6>
                <ul class="mb-0">
                    <li>Ще получите имейл с потвърждение</li>
                    <li>Поръчката ще бъде обработена в 1-2 работни дни</li>
                    <li>Ще получите проследяващ номер при изпращане</li>
                </ul>
            </div>

            <div class="text-center">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-lg me-2"><i class="bi bi-file-text"></i> Виж детайли</a>
                <a asp-action="MyOrders" class="btn btn-outline-primary btn-lg me-2"><i class="bi bi-list-ul"></i> Моите поръчки</a>
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary btn-lg"><i class="bi bi-shop"></i> Продължи пазаруването</a>
            </div>
        </div>
    </div>
</div>
