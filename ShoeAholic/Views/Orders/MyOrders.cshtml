@model IEnumerable<ShoeAholic.Models.Order>
@{
    ViewData["Title"] = "Моите поръчки";
}

<div class="container my-5">
    <h2 class="mb-4"><i class="bi bi-box-seam"></i> Моите поръчки</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">@TempData["Success"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h3 class="mt-3">Все още нямате поръчки</h3>
            <p class="text-muted">Разгледайте нашите продукти и направете първата си поръчка.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg mt-3"><i class="bi bi-shop"></i> Към продуктите</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <small class="text-muted">Поръчка</small>
                                    <h5 class="mb-0 text-primary">#@order.Id</h5>
                                    <small class="text-muted">@order.CreatedOn.ToString("dd.MM.yyyy")</small>
                                </div>
                                <div class="col-md-2 text-center">
                                    @switch (order.Status)
                                    {
                                        case ShoeAholic.Models.Enums.OrderStatus.Pending:
                                            <span class="badge bg-warning">В очакване</span>
                                            break;
                                        case ShoeAholic.Models.Enums.OrderStatus.Processing:
                                            <span class="badge bg-info">Обработва се</span>
                                            break;
                                        case ShoeAholic.Models.Enums.OrderStatus.Shipped:
                                            <span class="badge bg-primary">Изпратена</span>
                                            break;
                                        case ShoeAholic.Models.Enums.OrderStatus.Delivered:
                                            <span class="badge bg-success">Доставена</span>
                                            break;
                                        case ShoeAholic.Models.Enums.OrderStatus.Cancelled:
                                            <span class="badge bg-danger">Отказана</span>
                                            break;
                                    }
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Доставка</small><br />
                                    @if (order.DeliveryType == ShoeAholic.Models.Enums.DeliveryType.Address)
                                    {
                                        <i class="bi bi-house"></i> <text>До адрес</text>
                                    }
                                    else
                                    {
                                        <i class="bi bi-shop"></i> <text>Офис на куриер</text>
                                    }
                                    <br /><small class="text-muted">@order.City</small>
                                </div>
                                <div class="col-md-2 text-center">
                                    <small class="text-muted">Плащане</small><br />
                                    @if (order.PaymentType == ShoeAholic.Models.Enums.PaymentType.CashOnDelivery)
                                    {
                                        <i class="bi bi-cash"></i> <text>Наложен платеж</text>
                                    }
                                    else
                                    {
                                        <i class="bi bi-credit-card"></i> <text>Карта</text>
                                        if (order.IsPaid)
                                        {
                                            <br />

                                            <span class="badge bg-success">Платена</span>
                                        }
                                    }
                                </div>
                                <div class="col-md-2 text-center">
                                    <small class="text-muted">Обща сума</small>
                                    <h5 class="mb-0">@order.TotalPrice.ToString("F2") лв.</h5>
                                </div>
                                <div class="col-md-1 text-end">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">Детайли</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
