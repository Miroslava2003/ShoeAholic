@model ShoeAholic.Models.Shoe

<h2>Редактиране на обувка</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Марка</label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Модел</label>
        <input asp-for="Model" class="form-control" />
    </div>

    <div class="form-group">
        <label>Категория</label>
        <select asp-for="Category" class="form-control">
            <option value="Men">Мъже</option>
            <option value="Women">Жени</option>
        </select>
    </div>

    <div class="form-group">
        <label>Цвят</label>
        <input asp-for="Color" class="form-control" />
    </div>

    <div class="form-group">
        <label>Цена</label>
        <input asp-for="Price" class="form-control" inputmode="decimal" placeholder="напр. 99,99" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Запази</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>
