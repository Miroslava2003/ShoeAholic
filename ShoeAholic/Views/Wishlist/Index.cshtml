@model IEnumerable<ShoeAholic.Models.WishlistItem>
@{
    ViewData["Title"] = "Моите любими";
}

<div class="container my-5">
    <h2 class="mb-4">Моите любими продукти</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">@TempData["Success"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-heart display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">Все още нямате любими продукти</h3>
            <p class="text-muted">Разгледайте нашите продукти и добавете любимите си!</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3"><i class="bi bi-shop"></i> Разгледай продукти</a>
        </div>
    }
    else
    {
        <p class="text-muted mb-4">Имате <strong>@Model.Count()</strong> любими продукта</p>

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm position-relative">
                        <form asp-action="Remove" method="post" class="position-absolute top-0 end-0 m-2" style="z-index: 10;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger rounded-circle wishlist-heart" title="Премахни от любими" onclick="return confirm('Сигурни ли сте?')"><i class="bi bi-x-lg"></i></button>
                        </form>

                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Shoe.Id">
                            @if (item.Shoe.Images?.Any() ?? false)
                            {
                                <img src="@item.Shoe.Images.First().ImageUrl" class="card-img-top" alt="@item.Shoe.Brand @item.Shoe.Model" style="height: 250px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;"><i class="bi bi-image text-muted" style="font-size: 3rem;"></i></div>
                            }
                        </a>

                        <div class="card-body text-center">
                            <h6 class="card-title">@item.Shoe.Brand</h6>
                            <p class="card-text text-muted mb-2">@item.Shoe.Model</p>
                            <p class="card-text mb-3"><strong style="color: #9528de;" class="fs-5">@item.Shoe.Price.ToString("F2") лв.</strong></p>
                            <div class="mb-3"><span class="badge" style="background-color: #9528de; color: white;">@(item.Shoe.Category == "Men" ? "Мъже" : item.Shoe.Category == "Women" ? "Жени" : item.Shoe.Category)</span></div>
                            @if (item.Shoe.Sizes?.Any(s => s.Quantity > 0) ?? false)
                            {
                                <div class="mb-2">
                                    <small class="text-muted">Налични размери:</small><br />
                                    @foreach (var size in item.Shoe.Sizes.Where(s => s.Quantity > 0).Take(5))
                                    {
                                        <span class="badge bg-secondary me-1">@size.Size</span>
                                    }
                                </div>
                            }
                            <small class="text-muted"><i class="bi bi-calendar"></i> @item.AddedOn.ToString("dd.MM.yyyy")</small>
                        </div>

                        <div class="card-footer bg-white border-0">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Shoe.Id" class="btn btn-outline-primary w-100"><i class="bi bi-eye"></i> Виж детайли</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .wishlist-heart {
        transition: transform 0.2s ease;
    }

        .wishlist-heart:hover {
            transform: scale(1.15);
        }
</style>
