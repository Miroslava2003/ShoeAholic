@model ShoeAholic.Models.ViewModels.AdminOrdersStatsViewModel
@{
    ViewData["Title"] = "Dashboard - Поръчки";
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi"></i> Поръчки</h2>
        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-list-ul"></i> Всички поръчки</a>
    </div>

    <div class="mb-3">
        <a asp-controller="AdminProducts" asp-action="Dashboard" class="btn btn-outline-secondary">← Административен панел</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-primary shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-3"><i class="bi bi-calendar-day"></i> ДНЕС</h6>
                    <h3 class="text-primary mb-2">@Model.TodayOrders</h3>
                    <p class="mb-0">поръчки</p>
                    <h4 class="text-success mt-2">@Model.TodayRevenue.ToString("F2") лв.</h4>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-3"><i class="bi bi-calendar-week"></i> СЕДМИЦА</h6>
                    <h3 class="text-info mb-2">@Model.WeekOrders</h3>
                    <p class="mb-0">поръчки</p>
                    <h4 class="text-success mt-2">@Model.WeekRevenue.ToString("F2") лв.</h4>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-3"><i class="bi bi-calendar-month"></i> МЕСЕЦ</h6>
                    <h3 class="text-warning mb-2">@Model.MonthOrders</h3>
                    <p class="mb-0">поръчки</p>
                    <h4 class="text-success mt-2">@Model.MonthRevenue.ToString("F2") лв.</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-success shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-graph-up"></i> ОБЩА СТАТИСТИКА</h5>
                    <hr />
                    <div class="d-flex justify-content-between mb-2">
                        <span>Общо поръчки:</span>
                        <strong class="fs-5">@Model.TotalOrders</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Обща сума:</span>
                        <strong class="fs-5 text-success">@Model.TotalRevenue.ToString("F2") лв.</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Средна стойност:</span>
                        <strong class="fs-5 text-primary">@Model.AverageOrderValue.ToString("F2") лв.</strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-pie-chart"></i> ПО СТАТУС</h5>
                    <hr />
                    <div class="d-flex justify-content-between mb-2"><span><i class="bi bi-clock text-warning"></i> Нови:</span><strong>@Model.PendingOrders</strong></div>
                    <div class="d-flex justify-content-between mb-2"><span><i class="bi bi-gear text-primary"></i> В обработка:</span><strong>@Model.ProcessingOrders</strong></div>
                    <div class="d-flex justify-content-between mb-2"><span><i class="bi bi-truck text-info"></i> Изпратени:</span><strong>@Model.ShippedOrders</strong></div>
                    <div class="d-flex justify-content-between mb-2"><span><i class="bi bi-check-circle text-success"></i> Доставени:</span><strong>@Model.DeliveredOrders</strong></div>
                    <div class="d-flex justify-content-between"><span><i class="bi bi-x-circle text-danger"></i> Отказани:</span><strong>@Model.CancelledOrders</strong></div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title"><i class="bi bi-lightning"></i> Бързи действия</h5>
            <hr />
            <div class="row g-2">
                <div class="col-md-3"><a asp-action="Index" asp-route-status="1" class="btn btn-outline-warning w-100"><i class="bi bi-clock"></i> Нови поръчки (@Model.PendingOrders)</a></div>
                <div class="col-md-3"><a asp-action="Index" asp-route-status="2" class="btn btn-outline-primary w-100"><i class="bi bi-gear"></i> В обработка (@Model.ProcessingOrders)</a></div>
                <div class="col-md-3"><a asp-action="Index" asp-route-status="3" class="btn btn-outline-info w-100"><i class="bi bi-truck"></i> Изпратени (@Model.ShippedOrders)</a></div>
                <div class="col-md-3"><a asp-action="Index" class="btn btn-outline-secondary w-100"><i class="bi bi-list-ul"></i> Всички поръчки</a></div>
            </div>
        </div>
    </div>
</div>
