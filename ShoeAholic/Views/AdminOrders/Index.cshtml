@model IEnumerable<ShoeAholic.Models.Order>
@using ShoeAholic.Models.Enums
@{
    ViewData["Title"] = "Управление на поръчки";
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam"></i> Всички поръчки</h2>
        <a asp-action="Dashboard" class="btn btn-outline-primary"><i class="bi bi-speedometer2"></i></a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Търсене</label>
                    <input type="text" name="search" class="form-control" placeholder="Номер, име, телефон..." value="@ViewData["Search"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Статус</label>
                    <select name="status" class="form-select">
                        <option value="">Всички</option>
                        <option value="1" selected="@(ViewData["Status"]?.ToString() == "1")">Нова</option>
                        <option value="2" selected="@(ViewData["Status"]?.ToString() == "2")">В обработка</option>
                        <option value="3" selected="@(ViewData["Status"]?.ToString() == "3")">Изпратена</option>
                        <option value="4" selected="@(ViewData["Status"]?.ToString() == "4")">Доставена</option>
                        <option value="5" selected="@(ViewData["Status"]?.ToString() == "5")">Отказана</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">От дата</label>
                    <input type="date" name="dateFrom" class="form-control" value="@ViewData["DateFrom"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">До дата</label>
                    <input type="date" name="dateTo" class="form-control" value="@ViewData["DateTo"]" />
                </div>
                <div class="col-md-1">
                    <label class="form-label">На стр.</label>
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                        <option value="20" selected="@(ViewBag.PageSize == 20)">20</option>
                        <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                        <option value="100" selected="@(ViewBag.PageSize == 100)">100</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary flex-fill"><i class="bi bi-search"></i> Търси</button>
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-x-circle"></i></a>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.TotalItems > 0)
    {
        <partial name="_Pagination" />
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info"><i class="bi bi-info-circle"></i> Няма намерени поръчки.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>№</th>
                                <th>Дата</th>
                                <th>Клиент</th>
                                <th>Телефон</th>
                                <th>Продукти</th>
                                <th>Сума</th>
                                <th>Статус</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td><strong>#@order.Id</strong></td>
                                    <td><small>@order.CreatedOn.ToString("dd.MM.yyyy")<br /><span class="text-muted">@order.CreatedOn.ToString("HH:mm")</span></small></td>
                                    <td>@order.FullName</td>
                                    <td>@order.Phone</td>
                                    <td><span class="badge bg-secondary">@order.Items.Count артикула</span></td>
                                    <td><strong class="text-success">@order.TotalPrice.ToString("F2") лв.</strong></td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case OrderStatus.Pending:
                                                <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Нова</span>
                                                break;
                                            case OrderStatus.Processing:
                                                <span class="badge bg-primary"><i class="bi bi-gear"></i> В обработка</span>
                                                break;
                                            case OrderStatus.Shipped:
                                                <span class="badge bg-info"><i class="bi bi-truck"></i> Изпратена</span>
                                                break;
                                            case OrderStatus.Delivered:
                                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Доставена</span>
                                                break;
                                            case OrderStatus.Cancelled:
                                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Отказана</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary" title="Детайли"><i class="bi bi-eye"></i></a>
                                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary" title="Редактирай"><i class="bi bi-pencil"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (ViewBag.TotalItems > 0)
        {
            <div class="mt-4"><partial name="_Pagination" /></div>
        }

        <div class="mt-3"><p class="text-muted">Общо: <strong>@ViewBag.TotalItems</strong> поръчки</p></div>
    }
</div>
