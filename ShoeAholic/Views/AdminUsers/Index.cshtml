@model IEnumerable<ShoeAholic.Models.ViewModels.AdminUserViewModel>

<h2>Админ панел – Потребители</h2>

<div class="mb-3">
    <a asp-controller="AdminProducts" asp-action="Dashboard" class="btn btn-outline-secondary">← Административен панел</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="search" class="form-control" placeholder="Търсене по email, username, телефон или ID" value="@ViewBag.Search" />
            </div>
            <div class="col-md-2">
                <select name="pageSize" class="form-select" onchange="this.form.submit()">
                    <option value="10" selected="@(ViewBag.PageSize == 10)">10 на страница</option>
                    <option value="20" selected="@(ViewBag.PageSize == 20)">20 на страница</option>
                    <option value="50" selected="@(ViewBag.PageSize == 50)">50 на страница</option>
                    <option value="100" selected="@(ViewBag.PageSize == 100)">100 на страница</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-dark w-100">Търси</button>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.TotalItems > 0)
{
    <partial name="_Pagination" />
}

<table class="table">
    <thead>
        <tr><th>Email</th><th>Роля</th><th>Действия</th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.Email
                    @if (user.IsSelf)
                    {
                        <span class="badge bg-info ms-2">Вие</span>
                    }
                </td>
                <td>
                    @if (user.IsAdmin)
                    {
                        <span class="badge bg-danger"><i class="bi bi-shield-check"></i> Admin</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary"><i class="bi bi-person"></i> User</span>
                    }
                </td>
                <td>
                    @if (!user.IsSelf)
                    {
                        @if (!user.IsAdmin)
                        {
                            <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#makeAdminModal-@user.Id"><i class="bi bi-shield-check"></i> Направи Admin</button>

                            <div class="modal fade" id="makeAdminModal-@user.Id" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header"><h5 class="modal-title">Потвърждение</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                                        <div class="modal-body">Сигурни ли сте, че искате да направите <strong>@user.Email</strong> администратор?<br /><small class="text-warning"><i class="bi bi-exclamation-triangle"></i> Администраторите имат пълен достъп.</small></div>
                                        <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button><a asp-action="MakeAdmin" asp-route-id="@user.Id" class="btn btn-warning">Да, направи Admin</a></div>
                                    </div>
                                </div>
                            </div>

                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteUserModal-@user.Id"><i class="bi bi-trash"></i> Изтрий</button>

                            <div class="modal fade" id="deleteUserModal-@user.Id" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header"><h5 class="modal-title">Потвърждение за изтриване</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                                        <div class="modal-body">Сигурни ли сте, че искате да изтриете <strong>@user.Email</strong>?<br /><small class="text-danger"><i class="bi bi-exclamation-triangle"></i> Това действие е необратимо!</small></div>
                                        <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button><a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Да, изтрий</a></div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted"><i class="bi bi-shield-lock"></i> Защитен</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted"><i class="bi bi-dash-circle"></i> Без действия</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalItems > 0)
{
    <div class="mt-4"><partial name="_Pagination" /></div>
}

@if (TempData["Success"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast show align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body"><i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast show align-items-center text-white bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body"><i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toasts = document.querySelectorAll('.toast');
        toasts.forEach(function (toast) {
            setTimeout(function () { const bsToast = new bootstrap.Toast(toast); bsToast.hide(); }, 5000);
        });
    });
</script>

<style>
    .table td {
        vertical-align: middle;
    }

    .toast {
        min-width: 300px;
    }
</style>
